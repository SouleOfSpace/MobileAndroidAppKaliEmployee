<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.subInfo.BasicInfoFragment">

    <GridLayout
        android:id="@+id/info_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/profile_title"
        android:columnCount="2"
        android:gravity="center"
        android:padding="15dp"
        android:rowCount="9"
        >

        <ImageView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="0.15"

            android:src="@drawable/ic_profile_account_circle_24" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="start"
            android:text="Табельный номер"

            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tabel_number"
            android:layout_width="270dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="421496"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="2"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:text="Должность/профессия"
            android:textSize="16sp"

            android:textStyle="normal" />

        <TextView
            android:id="@+id/profession"
            android:layout_width="270dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"

            android:text="Электрослесарь (слесарь) дежурный и по ремонту оборудования подземный"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="4"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"
            android:text="Подразделение"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/worktopic"
            android:layout_width="270dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="БРИГАДА №2"

            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnWeight="0.15"

            android:layout_gravity="center"
            android:src="@drawable/ic_mapplace_24" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="6"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:text="Местоположение"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/workplace"
            android:layout_width="270dp"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="Нет данных"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_edit"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="end"

            android:background="@color/white"
            android:padding="5dp"

            android:text="Редактировать"
            android:textColor="@color/purple_700"
            android:textSize="20sp" />
    </GridLayout>

</FrameLayout>