<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.subInfo.AboutMeFragment"
    android:background="@color/sub_info">

    <GridLayout
        android:id="@+id/info_grid_about_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/profile_title"
        android:columnCount="2"
        android:gravity="center"
        android:padding="15dp"
        android:rowCount="14"
        >

        <ImageView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="0.15"

            android:src="@drawable/ic_profile_account_circle_24" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="start"
            android:text="Паспортные данные"

            android:textSize="16sp"
            android:textStyle="normal" />


        <TextView
            android:layout_width="270dp"
            android:layout_row="1"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:text="Номер"
            android:textSize="16sp"

            android:textStyle="normal" />

        <TextView
            android:id="@+id/about_me_passport_number"
            android:layout_width="270dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"

            android:text="MC3130599"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="3"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"
            android:text="Иденфикационный номер"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/about_me_passport_id"
            android:layout_width="270dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="21515165166РВ202Р"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="5"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"
            android:text="Выдан"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/about_me_passport_host"
            android:layout_width="270dp"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="Солигорский РОВД"

            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnWeight="0.15"

            android:layout_gravity="center"
            android:src="@drawable/ic_family_24" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="7"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:text="Семья"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="8"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"
            android:text="Семейное положение"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/about_me_family_status"
            android:layout_width="270dp"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="Холост"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="10"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="5dp"
            android:text="Дети"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/about_me_kids"
            android:layout_width="270dp"
            android:layout_row="11"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="Нет"

            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_row="12"
            android:layout_column="0"
            android:layout_columnWeight="0.15"

            android:layout_gravity="center"
            android:src="@drawable/ic__phone_24" />

        <TextView
            android:layout_width="270dp"
            android:layout_row="12"
            android:layout_column="1"

            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:text="Телефон"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/about_phone"
            android:layout_width="270dp"
            android:layout_row="13"
            android:layout_column="1"
            android:layout_columnWeight="0.95"
            android:layout_gravity="start"
            android:text="+375292558934"

            android:textSize="16sp"
            android:textStyle="bold" />

    </GridLayout>

</FrameLayout>